html {
  height: 100%;
  padding-bottom: 100px;
}

body {
  font-family: Calibri,Arial,sans-serif;
  font-size: 14px;
  /*background: linear-gradient(top, #00BAD6, #007A8C);*/
  background: -moz-linear-gradient(center top , #00BAD6, white) repeat scroll 0 0 transparent;
  background: -webkit-linear-gradient(top,#00BAD6, white);
  position: relative;
  line-height: 30px;
  height: 100%;
}

a:hover {
  background: none
}

.content-container {
  width: 50%;
  margin: 0 auto;
  min-height: 100%;
  padding-top: 30px;
}

.top {
  text-align: center;
  line-height: 50px;
  color: white;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.698), 2px 2px 4px rgba(80, 80, 80, 0.5);
  margin-bottom: 50px;
}

#input-banner {
  background-color: #86CED9;
  border-top: 2px solid #A786D9;
  border-left: 2px solid #A786D9;
  border-right: 2px solid #A786D9;
  padding: 15px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.75);
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.698), 0 1px 2px rgba(80, 80, 80, 0.5);
  font-size: 23px;
  color: white;
  border-radius: 10px 10px 0px 0px;
}

#submit {
  background: -moz-linear-gradient(center top , #51C3FA, #0099CC);
  background: -webkit-linear-gradient(top,#51C3FA, #0099CC);
  border-bottom: 2px solid #A786D9;
  border-left: none;
  border-right: 2px solid #A786D9;
  float: right;
  height: 64px;
  border-top: none;
  color: white;
  width: 142px; 
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.75);
  font-size: 15px;
  font-weight: bold;
}

#submit:hover {
  cursor: pointer;
}

#input-url {
  border:none;
  border-left: 2px solid #A786D9;
  border-bottom: 2px solid #A786D9;
  width: 79%;
  height: 60px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.75);
  font-size: 20px;
  font-weight: bold;
}

#list {
  font-size: 15px;
  position: relative;
  width: 100%;
  text-align: center;
  margin-top: 50px;
  line-height: 50px;
}

#show-list {
  font-size: 15px;
  position: relative;
  width: 50%;
  float: left;
  text-align: center;
  margin-top: 20px;
  line-height: 50px;
}

#list .element, 
#show-list .element,
.error-container .element {
  border-top: 1px solid rgba(255, 255, 255, 0.698);
  background-color: #86CED9;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.75);
  color: rgba(0, 0, 0, 0.75);
  font-weight: bold;
  margin-bottom: 2px;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.698), 0 1px 2px rgba(255, 255, 255, 0.5);
  width: 50%;
  margin: 0 auto;
  font-size: 25px
}

#list .element#fourth {
  font-size: 34px;
}

#list .element#third {
  line-height: 30px;
  padding: 5px 0;
}

#show-list label,
#chart-title {
  font-size: 20px;
  font-weight: bold;
  text-shadow: 0px 0px 0px rgba(255, 255, 255, 0.698), 2px 2px 4px rgba(80, 80, 80, 0.5);
  color: white;
}

#right-show {
  float: right;
  width: 50%;
  text-align: center;
}

#chart {
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.75);
  height: 300px;
  width: 550px;
  margin-left: 70px;
}

.error-container {
  margin: 215px auto auto;
  text-align: center;
  width: 66%;
}

#back-error {
  height: 34px;
  width: 70px;
}
